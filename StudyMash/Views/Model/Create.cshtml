@model ModelCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@*ViewBag.MakeList*@

<h2 class="text-info">Add Make of Vehicle</h2>

<form asp-controller="VehicleModel" asp-action="Create" method="post">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Make"></label>
        </div>
        <div class="col-4">
            <select asp-for="Make" class="form-control"
                    asp-items="@(new SelectList(ViewBag.MakeList,"MakeId","Name"))" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>


    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>