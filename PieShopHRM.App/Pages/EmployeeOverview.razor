@page "/employeeOverview"


<h3 class="text-info">All Employees</h3>

<div class="row">

    <div class="col-12">
        <table class="table table-striped border">
            <thead>
                <tr class="table-info">
                    <th></th>
                    <th>EmployeeNumber</th>
                    <th>FullName</th>
                    <th>Last Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Employees)
                {
                    <tr>
                        <td><img src="@employee.ImageName" class="rounded-circle" width="40" height="50" /></td>
                        <td>@employee.EmpNumber</td>
                        <td>@employee.FullName</td>
                        <td>@employee.EmpNumber</td>
                        <td><a href="@($"/EmployeeDetails/{employee.EmpNumber}")" class="btn btn-primary">Details</a></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>